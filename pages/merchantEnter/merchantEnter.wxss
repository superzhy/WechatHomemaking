/* pages/merchantEnter/merchantEnter.wxss */
page{
  background: #eeeff3;
}
.item {
  padding: 0 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  background: #fff;
}

.item.name {
  background: #eeeff3;
}
.item input {
  width: 100%;
  height: 100%;
}

.item.verify {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}

.item.verify .verifyCode {
  margin-top: 21rpx;
  margin-left: 20rpx;
  width: 160rpx;
  height: 48rpx;
  background: #ff6000;
  text-align: center;
  line-height: 48rpx;
  font-size: 24rpx;
  border-radius: 10rpx;
  color: #fff;
}

.btn {
  padding: 0 30rpx;
  margin-top: 30rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.btn button {
  height: 100%;
  width: 100%;
  background: #ff6000;
  color: #fff;
  line-height: 90rpx;
}