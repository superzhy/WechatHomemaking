/* pages/orderDetails/orderDetails.wxss */

page {
  height: 100%;
  background: #eeeff3;
}

#wrap {
  height: 100%;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  flex-flow: column;
}

#header {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  justify-content: space-between;
  padding: 0 60rpx;
  height: 200rpx;
  background: #ff9758;
  color: #fff;
}

#header .cont {
  padding-top: 60rpx;
}

#header .cont .title {
  font-size: 40rpx;
  line-height: 40rpx;
}

#header .cont .subtitle {
  margin-top: 30rpx;
  font-size: 30rpx;
  line-height: 40rpx;
}

#header icon {
  width: 66rpx;
}
#header icon image {
  width: 66rpx;
  height: 73rpx;
  margin-top: 65rpx;
}

#main {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
}

.section {
  padding:30rpx;
  background:#fff;
  margin-bottom: 20rpx;
}
.section.s1 .title{
  padding-bottom: 30rpx;
  font-size: 30rpx;
  line-height: 30rpx;
}
.section.s1 .title image {
  width: 34rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.section.s1 .cont {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  padding-left: 40rpx;
  height: 169rpx;
  background: #eeeff3;
}
.section.s1 .cont image {
  margin-top: 20rpx;
  width: 130rpx;
  height: 130rpx;
}

.section.s1 .cont .text {
  padding-left: 30rpx;
  padding-top: 20rpx;
font-size: 28rpx;
}
.section.s1 .cont .text .name {
  margin-bottom: 20rpx;
}

.section.s2 {
  padding-bottom: 0;
  padding-top: 0;
}
.section.s3 {
  padding-bottom: 0;
  padding-top: 0;
}

.list-item {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 30rpx;
}

.list-item .name {
  width: 150rpx;
  color: #919191;
}

.list-item .txt {
  width: 80%;
  overflow: hidden;
}

.list-item.remarks {
  height: 120rpx;
}
.list-item.remarks .txt {
  padding: 15rpx 0;
  height: 100rpx;
  line-height: 40rpx;
  box-sizing: border-box;
  overflow: scroll
}



#footer {
  height: 98rpx;
  font-size: 34rpx;
  text-align: center;
  line-height: 98rpx;
  color: #fff;
  background: #ff6000;
}
